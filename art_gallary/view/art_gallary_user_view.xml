<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_art_gallary_user_search" model="ir.ui.view">
            <field name="name">user.view.search</field>
            <field name="model">artgallary.user</field>
            <field name="arch" type="xml">
                <search >
                    <field name="name"/>
                    <field name="birth_date"/>
                    <field name="address"/>
                    <field name="email"/>
                </search>
            </field>
        </record>



        <record id="view_art_gallary_user_list" model="ir.ui.view">
            <field name="name">user.tree</field>
            <field name="model">artgallary.user</field>
            <field name="arch" type="xml">
                <tree >
                    <field name="name"/>
                    <field name="birth_date"/>
                    <field name="email"/>
                    <field name="address"/>
                </tree>
            </field>
        </record>

        
        <record id="art_gallary_user_action" model="ir.actions.act_window">
            <field name="name">Users</field>
            <field name="res_model">artgallary.user</field>
            <field name="view_mode">tree,form</field>
        </record> 
    
    </data>
    

    

</odoo>
